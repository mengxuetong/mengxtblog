<%- include ../include/header%>
<form id="myForm" name="myForm" class="form-horizontal"  method="post" action="/users/reg" role="form">
    <div class="form-group" ng-class="{'has-error':myForm.username.$dirty && myForm.username.$invalid}">
        <label class="col-md-2 control-label">用户名</label>
        <div class="col-md-8">
            <input ng-model="username" ng-pattern="/^[a-zA-z]{1}/" ng-minlength="5" ng-maxlength="20" ng-required="true" autocomplete="off" class="form-control" type="text" name="username" placeholder="请输入用户名"/>
            <div ng-show="myForm.username.$error.minlength" class="alert alert-danger" role="alert">用户名长度不能小于5位</div>
            <div ng-show="myForm.username.$error.maxlength" class="alert alert-danger" role="alert">用户名长度不能大于20位</div>
            <div ng-show="myForm.username.$error.pattern" class="alert alert-danger" role="alert">第一位必须是字母</div>
        </div>
    </div>
    <div class="form-group" ng-class="{'has-error':myForm.password.$dirty && myForm.password.$invalid}">
        <label class="col-md-2 control-label">密码</label>
        <div class="col-md-8">
            <input ng-model="data.password" ng-minlength="5" ng-maxlength="10" ng-required="true" autocomplete="off" class="form-control" type="password" name="password" placeholder="请输入密码"/>
            <div ng-show="myForm.password.$error.minlength" class="alert alert-danger" role="alert">密码长度不能小于5位</div>
            <div ng-show="myForm.password.$error.maxlength" class="alert alert-danger" role="alert">密码长度不能大于10位</div>
        </div>
    </div>
    <div class="form-group" ng-class="{'has-error':myForm.password_repeat.$dirty && myForm.password_repeat.$invalid}">
        <label class="col-md-2 control-label">重输密码</label>
        <div class="col-md-8">
            <input ng-model="data.passwordRepeat" ng-minlength="5" ng-maxlength="10" ng-required="true" autocomplete="off" class="form-control" type="password" name="password_repeat" placeholder="请输入密码" />
            <div ng-show="myForm.password.$dirty && myForm['password_repeat'].$dirty && data.password != data.passwordRepeat" class="alert alert-danger" role="alert">两次密码不一致</div>
        </div>
    </div>
    <div class="form-group" ng-class="{'has-error':myForm.email.$dirty && myForm.email.$invalid}">
        <label class="col-md-2 control-label">邮箱</label>
        <div class="col-md-8">
            <input ng-model="data.email" class="form-control" type="email" name="email" ng-required="true" autocomplete="off" placeholder="请输入邮箱"/>
            <div ng-show="myForm.email.$error.email" class="alert alert-danger" role="alert">邮箱格式不正确</div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-md-8">
            <button class="btn btn-default" type="submit" />注册</button>
        </div>
    </div>
</form>
<%- include ../include/footer%>
